<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
	<head>
		<%= render partial: 'layouts/head' %>
		<link rel="stylesheet" href="//cdn.jsdelivr.net/jquery.sidr/2.2.1/stylesheets/jquery.sidr.dark.min.css">
		<%= theme_css %>
		<style>
			#upper-wrapper a {
				color: white;
			}
			#body-wrapper a {
				color: <%= AppSettings['css.main_color'] %>;
			}
			header {
				background-color:  <%= AppSettings['css.accent_color'].blank? ? '#022042' : AppSettings['css.accent_color'] %>;
			}
			#home-search,
			.flat-main-panel {
				background-color:  <%= AppSettings['css.main_color'].blank? ? '#022042' : AppSettings['css.main_color'] %>;
			}

			.search-result-box .ui-menu .ui-menu-item a {
			  color: #333 !important;
			}
		</style>
		<%= css_injector %>
		<%= "#{AppSettings['design.header_js']}".html_safe %>

	</head>
<body class="<%#= (request.fullpath.gsub("/#{I18n.locale}/","").gsub("/","-")) %><%= controller_name %>-<%= action_name %>" data-locale="<%= I18n.locale %>">
	<script>
	  ga('set', 'location', location.href.split('#')[0]);
	  ga('send', 'pageview', { "title": document.title });
	</script>

	<main id="panel">

		<div id="upper-wrapper">
			<header>
				<div class="container">
					<div class="text-center">
						<%= link_to image_tag("#{AppSettings['design.header_logo']}", width: "156px", height: '16px', class: "logo"), AppSettings['settings.parent_site'], responsive: true %>
					</div>
				</div>
			</header>

			<div class="jumbotron flat-main-panel">
				<div class="container">
					<div class="row">
						<div class="col-md-10 col-md-offset-1">
								<div id="home-search">
								  <div class="text-center">
								    <%= render 'result/search_form' if knowledgebase? %>
								  </div>
								</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<article class="content">
			<div id="body-wrapper">
				<div class="container">
					<div class="row">
						<div class="col-md-10 col-md-offset-1">
							<% unless params[:controller] == 'home' %>
								<span>
									<style>
										ul.breadcrumb { background-color: transparent; }
									</style>
						      <%= render_breadcrumbs('') %>
						    </span>
						    <% if @page_title.present? %>
						    <h3 class="vp-page-title"><%= @page_title %></h3>
						    <% else %>
						    <%= yield :page_title %>
						    <% end %>
							<% end %>

							<%= bootstrap_flash %>

							<%= yield %>
						</div>
					</div>
				</div>
			</div>
		</article>
		<%= render partial: 'shared/contact' unless params[:controller]=='topics' && (params[:action]=='new' || params[:action]=='thanks') %>

	</main>

	<footer>
		<%= render :partial => 'layouts/footer' %>
	</footer>

<script>
$('#right-menu').sidr({
  name: 'nav',
  side: 'right',
	source: '#menu',
  onOpen: function(){
    // Re-name font Icons to correct classnames
    $("[class*='sidr-class-glyphicon'], [class*='sidr-class-btn']").attr('class',
      function( i, c ) {
        c = c.replace(/sidr-class-/g, '');
        return c;
      }
    );
  }
});

// Close menu on click
$('ul.nav').off().on('click', function(){
 $.sidr('close', 'nav');
});

// Close menu before navigating so turbolinks does not cache menu open
$(document).on('page:before-change', function () {
  $.sidr('close', 'nav');
});
</script>
<%= "<script src='/assets/widget.v1.js'></script>".html_safe if AppSettings['widget.show_on_support_site'] == '1' %>
<%= "#{AppSettings['design.footer_js']}".html_safe %>


</body>
</html>
